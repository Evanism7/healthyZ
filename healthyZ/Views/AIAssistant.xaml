<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="healthy.Views.AIAssistant"
             Title="AI助理"
             Shell.TitleColor="#5A7C78"
             BackgroundColor="#D5E8D4">

    <Grid Padding="20" RowSpacing="10" BackgroundColor="#80ffffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 標題 -->
            <RowDefinition Height="*"/>
            <!-- 聊天內容 -->
            <RowDefinition Height="Auto"/>
            <!-- 提示按鈕 -->
            <RowDefinition Height="Auto"/>
            <!-- 輸入列 -->
        </Grid.RowDefinitions>

        <!-- 聊天框 -->
        <ScrollView Grid.Row="1" x:Name="ChatScroll">
            <StackLayout x:Name="ChatStack" Spacing="10" />
        </ScrollView>

        <!-- 提示按鈕：放在輸入列上方 -->
        <Grid Grid.Row="2" Padding="0,10,0,0">
            <StackLayout Orientation="Vertical" Spacing="8">
                <Grid ColumnSpacing="10" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="Prompt1Button" Grid.Row="0" Grid.Column="0"
                            Text="幫我規劃一週的健康便當菜單？"
                            Clicked="Prompt1_Clicked"
                            BackgroundColor="#D5E8D4"
                            TextColor="Black"
                            FontSize="12"/>
                    <Button x:Name="Prompt2Button" Grid.Row="0" Grid.Column="1"
                            Text="推薦我明天可以吃哪些健康餐？"
                            Clicked="Prompt2_Clicked"
                            BackgroundColor="#D5E8D4"
                            TextColor="Black"
                            FontSize="12"/>
                    <Button x:Name="Prompt3Button" Grid.Row="1" Grid.Column="0"
                            Text="請根據我最近飲食紀錄製作一張飲食清單！"
                            Clicked="Prompt3_Clicked"
                            BackgroundColor="#D5E8D4"
                            TextColor="Black"
                            FontSize="12"/>
                    <Button x:Name="Prompt4Button" Grid.Row="1" Grid.Column="1"
                            Text="我該怎麼吃才不會復胖？"
                            Clicked="Prompt4_Clicked"
                            BackgroundColor="#D5E8D4"
                            TextColor="Black"
                            FontSize="12"/>
                </Grid>
            </StackLayout>
        </Grid>

        <!-- 輸入列 -->
        <Grid Grid.Row="3" ColumnSpacing="10" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Entry x:Name="InputEntry" Placeholder="請輸入訊息..." Grid.Column="0" TextColor="Black"/>
            <Button x:Name="SendButton" Text="➤" Clicked="SendButton_Clicked"
                    BackgroundColor="#A5D6A7" TextColor="Black" Grid.Column="1"/>
        </Grid>
    </Grid>
</ContentPage>
