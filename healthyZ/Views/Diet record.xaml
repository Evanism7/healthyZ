<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="healthy.Views.Diet_record">  

    <StackLayout Padding="10" Spacing="10">
        <ListView x:Name="recordListView"
                  ItemTapped="OnItemTapped"
                  Margin="0,10,0,10"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" BackgroundColor="#eeeeee" Margin="0,5">
                            <Label Text="{Binding food_name}" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="{Binding calories, StringFormat='熱量: {0} kcal'}" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding day, StringFormat='日期: {0:yyyy-MM-dd}'}" FontSize="12" TextColor="DarkGray"/>
                            <Label Text="{Binding protein, StringFormat='蛋白質: {0}g'}" FontSize="12" TextColor="DarkGray"/>
                            <Label Text="{Binding carbohydrates, StringFormat='碳水: {0}g'}" FontSize="12" TextColor="DarkGray"/>
                            <Label Text="{Binding fat, StringFormat='脂肪: {0}g'}" FontSize="12" TextColor="DarkGray"/>
                            <Label Text="{Binding location, StringFormat='地點: {0}'}" FontSize="12" TextColor="DarkGray"/>
                            <Label Text="{Binding rating, StringFormat='評分: {0}/5'}" FontSize="12" TextColor="DarkGray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>