<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="healthy.Views.LoginPage"
             Title="請登入" Shell.TitleColor="#5A7C78" BackgroundColor="#D5E8D4">
    <StackLayout Padding="30" Spacing="20"
                 VerticalOptions="Center">

        <Label Text="請輸入帳號與密碼" 
               FontSize="20" 
               TextColor="#48786F"
               HorizontalOptions="Center"/>

        <Border Stroke="#67AB9F" StrokeThickness="1" StrokeShape="RoundRectangle 12">
            <Entry x:Name="entryUid" 
           Placeholder="帳號" 
           Keyboard="Email"
           TextColor="#48786F"
           BackgroundColor="#80FFFFFF"/>
        </Border>

        <Border Stroke="#67AB9F" StrokeThickness="1" StrokeShape="RoundRectangle 12">
            <Entry x:Name="entryPwd" 
           Placeholder="密碼" 
           IsPassword="True"
           TextColor="#48786F"
           BackgroundColor="#80FFFFFF"/>
        </Border>

        <Button Text="登入"
                Clicked="OnLoginClicked"
                TextColor="#48786F"
                BackgroundColor="#9AC7BF"
                BorderColor="#67AB9F"
                BorderWidth="1"/>

        <Button Text="註冊" 
                Clicked="OnRegisterClicked" 
                TextColor="#48786F"
                BackgroundColor="#9AC7BF"
                BorderColor="#67AB9F"
                BorderWidth="1"/>

    </StackLayout>
</ContentPage>