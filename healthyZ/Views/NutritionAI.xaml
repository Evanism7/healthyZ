<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="healthyZ.Views.NutritionAI"
             Title="AI 分析結果" BackgroundColor="#D5E8D4">
    
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="分析結果：" FontAttributes="Bold" />
            <!-- 食物圖示與卡路里 -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Image Source="burger.png" WidthRequest="250" HeightRequest="250" />
                <VerticalStackLayout>
                    <Label Text="卡路里" FontSize="16" />
                    <Label Text="{Binding Calories}" FontSize="16" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- 標題 -->
            <Label Text="三大營養成分比例" FontSize="18" HorizontalOptions="Center" />

            <Label Text="{Binding OtherNutritionInfo}" 
                   LineBreakMode="WordWrap"
                   FontSize="18"
                   Padding="10"/>

            <!-- 操作按鈕 -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Button Text="清除" Clicked="OnDeleteClicked" BackgroundColor="#F44336" TextColor="White" WidthRequest="100"/>
                <Button Text="確認" Clicked="OnConfirmClicked" BackgroundColor="#4CAF50" TextColor="White" WidthRequest="100"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>