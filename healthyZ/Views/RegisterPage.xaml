<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="healthy.RegisterPage"
             Title="註冊" BackgroundColor="#D5E8D4">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="使用者名稱" TextColor="Black" />
            <Entry x:Name="usernameEntry" Placeholder="輸入名稱" TextColor="Black" />

            <Label Text="帳號" TextColor="Black" />
            <Entry x:Name="accountEntry" Placeholder="輸入帳號" TextColor="Black" />

            <Label Text="密碼" TextColor="Black" />
            <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="輸入密碼" TextColor="Black" />

            <Label Text="生日" TextColor="Black" />
            <DatePicker x:Name="birthdayPicker" MaximumDate="{x:Static sys:DateTime.Today}"  TextColor="Black"/>

            <Label Text="身高（cm）" TextColor="Black" />
            <Entry x:Name="heightEntry" Keyboard="Numeric" Placeholder="例如：170" TextColor="Black" />

            <Label Text="體重（kg）" TextColor="Black" />
            <Entry x:Name="weightEntry" Keyboard="Numeric" Placeholder="例如：65" TextColor="Black" />

            <Button Text="註冊" Clicked="OnRegisterClicked" />
            <Label x:Name="messageLabel" TextColor="Red" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>