<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="healthy.Views.Turntable"
             Title="轉盤"
             BackgroundColor="#D5E8D4">
    <VerticalStackLayout>
        <!-- 轉盤區域（建議放最上方） -->
        <Frame BackgroundColor="White"
       BorderColor="#67AB9F"
       CornerRadius="150"
       Padding="0"
       HasShadow="False"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       HeightRequest="300"
       WidthRequest="300">
            <GraphicsView x:Name="WheelView"
              HeightRequest="300"
              WidthRequest="300"
              HorizontalOptions="Center"
              VerticalOptions="Center">
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSpinClicked"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
        </Frame>
        <!-- 可滾動多行輸入區與按鈕 -->
        <ScrollView Orientation="Horizontal"
     HorizontalOptions="Center"
     VerticalOptions="End"
     Margin="0,0,0,20">
            <HorizontalStackLayout>
                <Editor x:Name="FoodEditor"
            Placeholder="每行輸入一種食物"
            WidthRequest="135"
            BackgroundColor="White"
            AutoSize="TextChanges"
            HeightRequest="150"
            Margin="0,20,0,0"
            HorizontalOptions="Center"/>
                <VerticalStackLayout Spacing="10" Margin="20,0,0,30" VerticalOptions="Center">
                    <Button Text="新增"
                Clicked="OnAddClicked"
                BackgroundColor="#9AC7BF"
                TextColor="#48786F"
                WidthRequest="70"/>
                    <Button Text="重置"
                Clicked="OnResetClicked"
                BackgroundColor="#F27272"
                TextColor="#48786F"
                WidthRequest="70"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>